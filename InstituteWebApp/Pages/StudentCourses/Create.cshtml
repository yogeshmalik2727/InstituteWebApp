@page
@model InstituteWebApp.StudentCourses.CreateModel

@{
    ViewData["Title"] = "Enroll Student to Course";
}

<h1>Enroll Student to Course</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentCourse.CourseID" class="control-label"></label>
                <select asp-for="StudentCourse.CourseID" class ="form-control" asp-items="ViewBag.CourseID"></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentCourse.StudentID" class="control-label"></label>
                <select asp-for="StudentCourse.StudentID" class ="form-control" asp-items="ViewBag.StudentID"></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentCourse.Fee" class="control-label"></label>
                <input asp-for="StudentCourse.Fee" class="form-control" />
                <span asp-validation-for="StudentCourse.Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">View Student Course Enrollment</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
