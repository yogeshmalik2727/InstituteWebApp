@page
@model InstituteWebApp.Students.IndexModel

@{
    ViewData["Title"] = "View All Student";
}

<h1>View All Student</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Student</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].FatherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].ContactNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.StudentID">Edit</a> |
                <a asp-page="./Details" class="btn btn-primary" asp-route-id="@item.StudentID">Details</a> |
                <a asp-page="./Delete" class="btn btn-primary" asp-route-id="@item.StudentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
